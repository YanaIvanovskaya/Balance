<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Balance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/grey_800</item> // кнопки, тулбары текст лайяут выбранный

        <item name="colorPrimaryVariant">@color/red_400</item>
        <item name="colorOnPrimary">@color/grey_800</item> // текст кнопок
        <!-- Secondary brand color. -->

        <item name="colorSecondary">@color/app_money</item> // radio button выбранные и свитчи текстовые поля выбранные
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/grey_200</item>
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>

    </style>
</resources>