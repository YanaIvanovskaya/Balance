<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OutlineRadioButton" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:gravity">center</item>
        <item name="android:button">@drawable/ic_empty</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="InputValid" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_text_edit_valid</item>
    </style>

    <style name="InputInvalid" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_text_edit_valid</item>
    </style>

    <style name="SaveButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/bg_save_button</item>
    </style>


</resources>
