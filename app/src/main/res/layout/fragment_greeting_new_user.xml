<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_start_next"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="362dp"
        android:layout_height="63dp"
        android:layout_margin="20dp"
        android:text="@string/continue_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/title_greeting_new_user"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="144dp"
        android:gravity="center"
        android:text="@string/greeting_new_user"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button_start_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/greeting_image"
        android:layout_width="292dp"
        android:layout_height="293dp"
        android:layout_margin="32dp"
        app:layout_constraintBottom_toTopOf="@+id/title_greeting_new_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/greeting_new_user_image" />

</androidx.constraintlayout.widget.ConstraintLayout>