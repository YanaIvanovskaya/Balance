<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_activated="true" android:state_enabled="false">
        <shape android:shape="oval">
            <size android:width="12dp" android:height="12dp" />
            <solid android:color="@color/red_300" />
        </shape>
    </item>

    <item android:state_checked="true" android:state_enabled="false">
        <shape android:shape="oval">
            <size android:width="12dp" android:height="12dp" />
            <solid android:color="@color/green_400" />
        </shape>

    </item>
    <item android:state_pressed="true" android:state_enabled="false">
        <shape android:shape="oval">
            <size android:width="12dp" android:height="12dp" />
            <stroke android:width="1dp" android:color="@color/green_400" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size android:width="12dp" android:height="12dp" />
            <solid android:color="@color/grey_300" />
        </shape>
    </item>
</selector>