<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <inset android:insetLeft="-2dp" android:insetTop="-2dp" android:insetRight="-2dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/green_100" />
                <stroke android:width="1dp" android:color="@color/green_100" />
                <padding android:bottom="10dp" android:left="15dp" android:right="15dp" android:top="10dp" />
            </shape>
        </inset>
    </item>

    <item>
        <inset android:insetLeft="-2dp" android:insetTop="-2dp" android:insetRight="-2dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/grey_50" />
                <stroke android:width="1dp" android:color="@color/grey_200" />
                <padding android:bottom="10dp" android:left="15dp" android:right="15dp" android:top="10dp" />
            </shape>
        </inset>
    </item>

</selector>